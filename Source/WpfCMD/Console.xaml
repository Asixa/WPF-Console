<UserControl x:Class="ADK.Console.Console"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADK.Console"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="#FF252526">
    <Grid>
        <TextBox x:Name="Input" Height="32" Margin="22,0,0,0" VerticalAlignment="Bottom" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" KeyDown="textBox_KeyDown" FontSize="20" />
        <TextBox x:Name="Output" TextWrapping="Wrap" Foreground="White" Background="Black" Margin="0,0,0,32" VerticalScrollBarVisibility="Auto" FontSize="20"  IsReadOnly="True"/>
        <Label Content=">" HorizontalAlignment="Left" Width="21" Foreground="White" FontSize="20" Background="{x:Null}" Margin="0,0,0,-5" RenderTransformOrigin="0.5,0.5" Height="39" VerticalAlignment="Bottom" />

    </Grid>
</UserControl>
